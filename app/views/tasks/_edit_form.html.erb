<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class='form-group'>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :deadline %><br>
      <%= f.datetime_select :deadline, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :status %><br>
      <%= f.select :status, ['In Progress', 'Blocking', 'Complete'], {include_blank: true}, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :priority %><br>
      <%= f.select(:priority, ['Urgent', 'High', 'Normal', 'Low', 'Not Important'], {:selected => 'Normal'}, class: 'form-control') %>
    </div>
    <div class="field">
    <%= f.label :notes %><br>
    <%= f.text_area :notes, class: 'form-control', rows: 3 %>
    </div>
    <div class="actions">
      <%= f.submit class: 'btn btn-block btn-lg btn-primary' %>
    </div>
  </div>
<% end %>
