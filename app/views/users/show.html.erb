<div class='container'>
  <div class='col-lg-8 col-lg-offset-2'>
    <div class='panel panel-primary' id='user_profile'>
      <div class='panel-heading'>
        <i class='fa fa-user fa-fw'></i>  My Account</span>
      </div>

      <div class='panel-body'>
        <ul class='nav nav-tabs'>
          <li class='active'>
            <a href='#profile' data-toggle='tab' aria-expanded='true'>Profile</a>
          </li>
          <li>
            <a href='#materials' data-toggle='tab' aria-expanded='false'>Materials</a>
          </li>
          <li>
            <a href='#security' data-toggle='tab' aria-expanded='false'>Security</a>
          </li>
          <li>
            <a href='#settings' data-toggle='tab' aria-expanded='false'>Settings</a>
          </li>
        </ul>

        <div class='tab-content'>
        
          <p id="notice"><%= notice %></p>

          <div class='tab-pane fade active in' id='profile-tab'>
            <h4><%= @user.first_name %> <%= @user.last_name %>'s Profile</h4>
            <%= image_tag "avatar.svg", id: 'headshot', class: 'avatar', height: 250 %>
            <%= render 'profile' %>
          </div>
          <div class='tab-pane fade' id='materials-tab'>
            <h4>My Materials</h4>
          </div>
          <div class='tab-pane fade' id='security-tab'>
            <h4>Security Settings</h4>
          </div>
          <div class='tab-pane fade' id='settings-tab'>
            <h4>Account Settings</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
