<table>
  <tr data-attribute='name'>
    <th>Name:</th>
    <td>
      <span class='profile-field' id='first_name'>
        <span class='p'><%= @user.first_name %></span>
        <span class='form'>
          <%= form_for @user do |f| %>
            <%= f.label :first_name, class: 'sr-only' %>
            <span class='input-group input-group-sm'>
              <%= f.text_field :first_name, value: @user.first_name, class: 'form-control' %>
              <span class='input-group-btn'>
                <%= f.button class: 'btn btn-default', title: 'Update'  do %>
                  <i class='fa fa-pencil fa-fw'></i>
                <% end %>
              </span>
            </span>
          <% end %>
        </span>
      </span> 
      <span class='profile-field' id='last_name'>
        <span class='p'><%= @user.last_name %></span>
        <span class='form'>
          <%= form_for @user do |f| %>
            <%= f.label :last_name, class: 'sr-only' %>
            <span class='input-group input-group-sm'>
              <%= f.text_field :last_name, value: @user.last_name, class: 'form-control' %>
              <span class='input-group-btn'>
                <%= f.button class: 'btn btn-default', title: 'Update'  do %>
                  <i class='fa fa-pencil fa-fw'></i>
                <% end %>
              </span>
            </span>
          <% end %>
        </span>
      </span>
    </td>
  </tr>

  <tr data-attribute='email'>
    <th>E-mail:</th>
    <td>
      <span class='profile-field' id='email'>
        <span class='p'><%= @user.email %></span>
      </span>
    </td>
  </tr>

  <tr data-attribute='birthdate'>
    <th>Birthdate:</th>
    <td>
      <span class='profile-field' id='birthdate'>
        <span class='p'><%= @user.birthdate.is_a?(Date) ? @user.birthdate : 'N/A' %></span>  
      </span>
    </td>
  </tr>

  <tr data-attribute='address_1'>
    <th>Address 1:</th>
    <td>
      <span class='profile-field' id='address_1'>
        <span class='p'><%= @user.address_1.empty? ? 'N/A' : @user.address_1 %></span>
      </span>
    </td>
  </tr>

  <tr data-attribute='address_2'>
    <th>Address 2:</th>
    <td>
      <span class='profile-field' id='address_2'>
        <span class='p'><%= @user.address_2.empty? ? 'N/A' : @user.address_2 %></span>
      </span>
    </td>
  </tr>

  <tr data-attribute='city'>
    <th>City:</th>
    <td>
      <span class='profile-field' id='city'>
        <span class='p'><%= @user.city.empty? ? 'N/A' : @user.city %></span>   
      </span>
    </td>  
  </tr>

  <tr data-attribute='state'>
    <th>State:</th>
    <td>
      <span class='profile-field' id='state'>
        <span class='p'><%= @user.state.empty? ? 'N/A' : @user.state %></span>
      </span>
    </td>
  </tr>

  <tr data-attribute='zip'>
    <th>Zip:</th>
    <td>
      <span class='profile-field' id='zip'>
        <span class='p'><%= @user.zip.empty? ? 'N/A' : @user.zip %></span>
      </span>
    </td>  
  </tr>
  <tr>
    <th>Member Since:</th>
    <td><%= @user.created_at.strftime("%-m/%-d/%Y") %></td>
  </tr>
</table>

<br>

<%= button_to "Edit Profile", edit_user_path(@user), method: :get, class: 'btn btn-lg btn-block btn-primary' %>