<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_message" class="panel panel-danger">
      <div class="panel-heading"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</div>

      <div class="panel-body">
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <% if notice %>
    <p class='notice'><%= notice %></p>
  <% end %>

  <% if alert %>
    <p class='alert'><%= alert %></p>
  <% end %>

  <div class='form-group'>
    <%= f.text_field :first_name, class: 'form-control half-width left', title: 'First Name', placeholder: 'First Name (required)' %>
  </div>
  <div class='form-group'>
    <%= f.text_field :last_name, class: 'form-control half-width right', title: 'Last Name', placeholder: 'Last Name (required)' %>
  </div>
  <div class='form-group'>
    <%= f.date_field :birthdate, class: 'form-control', title: 'Birth Date', placeholder: 'Birth Date' %>
  </div>
  <div class='form-group'>
    <%= f.text_field :address_1, class: 'form-control', title: 'Address Line 1', placeholder: 'Address Line 1' %>
  </div>
  <div class='form-group'>
    <%= f.text_field :address_2, class: 'form-control', title: 'Address Line 2', placeholder: 'Address Line 2' %>
  </div>
  <div class='form-group'>
    <%= f.text_field :city, class: 'form-control', title: 'City', placeholder: 'City' %>
  </div>
  <div class='form-group'>
    <%= f.select :state, us_states, {include_blank: true, selected: @user.state}, class: 'form-control', title: 'State' %>
  </div>
  <div class='form-group'>
    <%= f.text_field :zip, class: 'form-control half-width right', title: 'Zip', placeholder: 'Zip' %>
  </div>
  <div class='checkbox'>
    <%= f.check_box :terms, class: 'checkbox' %>
    <%= f.label :terms, value: "I accept the Terms of Use" %>
  </div>
  <div class='form-group'>
    <%= f.submit 'Update Profile', class: 'btn btn-lg btn-block btn-primary' %>
  </div>
<% end %>
